# makfile configuration
COMMON_OBJECTS  = 
CPU             = msp430g2553
CFLAGS          = -mmcu=${CPU} -I../h
LDFLAGS		= -L/opt/ti/msp430_gcc/include

#switch the compiler (for the internal make rules)
CC              = msp430-elf-gcc //compiles C
AS              = msp430-elf-as //compiles assembly

all: toy.elf

toy.elf: ${COMMON_OBJECTS} main.o buzzer.o interuptVectorHandler.o led.o stateMachines.o switches.o wdInterruptHandler.o ../lib/libTimer.a //.a is a static library generated by the archive tool
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $^ 

load: toy.elf
	msp430loader.sh load.elf

clean:
	rm -f *.o *.c~ *.h~ *~ *.c# *.elf
